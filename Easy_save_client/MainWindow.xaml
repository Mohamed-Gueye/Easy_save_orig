<Window x:Class="Easy_save_client.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Remote Console"
		Height="500"
		Width="900"
		Background="#002B2B"
		Foreground="White"
		FontFamily="Segoe UI">
	<Window.Resources>
		<DataTemplate x:Key="BackupTemplate">
			<Border Background="#009FA0"
					CornerRadius="6"
					Margin="5"
					Padding="10"
					BorderBrush="Black"
					BorderThickness="1">
				<StackPanel>
					<Grid>
						<TextBlock Text="{Binding Name}"
								FontWeight="Bold"
								FontSize="14"
								Foreground="White"
								HorizontalAlignment="Left"/>
						<Border x:Name="statusBorder"
								Background="#335050"
								CornerRadius="5"
								Padding="5,1"
								HorizontalAlignment="Right">
							<TextBlock Text="{Binding State}"
									FontWeight="Bold"
									FontSize="12"
									Foreground="Yellow"
									HorizontalAlignment="Right">
								<TextBlock.Style>
									<Style TargetType="TextBlock">
										<Style.Triggers>
											<DataTrigger Binding="{Binding State}"
													Value="RUNNING">
												<Setter Property="Foreground"
														Value="LightGreen"/>
											</DataTrigger>
											<DataTrigger Binding="{Binding State}"
													Value="PAUSED">
												<Setter Property="Foreground"
														Value="Yellow"/>
											</DataTrigger>
											<DataTrigger Binding="{Binding State}"
													Value="COMPLETED">
												<Setter Property="Foreground"
														Value="LightBlue"/>
											</DataTrigger>
											<DataTrigger Binding="{Binding State}"
													Value="STOPPED">
												<Setter Property="Foreground"
														Value="Gray"/>
											</DataTrigger>
											<DataTrigger Binding="{Binding State}"
													Value="READY">
												<Setter Property="Foreground"
														Value="White"/>
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</TextBlock.Style>
							</TextBlock>
						</Border>
					</Grid>
					<TextBlock Text="{Binding Type}"
							FontSize="12"
							Foreground="White"/>
					<TextBlock Text="{Binding Source}"
							FontSize="11"
							Foreground="White"/>
					<TextBlock Text="{Binding Target}"
							FontSize="11"
							Foreground="White"/>
					<Grid Margin="0,8,0,0">
						<ProgressBar Minimum="0"
								Maximum="100"
								Height="20"
								Value="{Binding Progress}">
							<ProgressBar.Style>
								<Style TargetType="ProgressBar">
									<Style.Triggers>
										<DataTrigger Binding="{Binding State}"
												Value="RUNNING">
											<Setter Property="Foreground"
													Value="LightGreen"/>
										</DataTrigger>
										<DataTrigger Binding="{Binding State}"
												Value="PAUSED">
											<Setter Property="Foreground"
													Value="Yellow"/>
										</DataTrigger>
										<DataTrigger Binding="{Binding State}"
												Value="COMPLETED">
											<Setter Property="Foreground"
													Value="LightBlue"/>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</ProgressBar.Style>
						</ProgressBar>
						<TextBlock Text="{Binding Progress, StringFormat={}{0}%}"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center"
								   FontWeight="Bold"
								   Foreground="Black"/>
					</Grid>
					<StackPanel Orientation="Horizontal"
							HorizontalAlignment="Center"
							Margin="0,8,0,0">
						<Button x:Name="btnPlay"
								Content="▶"
								Width="30"
								Height="25"
								Margin="2"
								Background="#4CAF50"
								Foreground="White"
								FontWeight="Bold"
								Click="BtnPlayPause_Click"
								Tag="{Binding}">
							<Button.Style>
								<Style TargetType="Button">
									<Style.Triggers>
										<DataTrigger Binding="{Binding State}"
												Value="RUNNING">
											<Setter Property="Content"
													Value="⏸"/>
											<Setter Property="Background"
													Value="#FF9800"/>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Button.Style>
						</Button>
						<Button Content="⏹"
								Width="30"
								Height="25"
								Margin="2"
								Background="#F44336"
								Foreground="White"
								FontWeight="Bold"
								Click="BtnStopSingle_Click"
								Tag="{Binding}"/>
					</StackPanel>
				</StackPanel>
			</Border>
		</DataTemplate>
	</Window.Resources>

	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0"
				VerticalAlignment="Top">
			<TextBlock Text="Remote Console"
					FontWeight="Bold"
					FontSize="18"
					Margin="0,0,0,20"/>
			<TextBox x:Name="txtHost"
					Text="127.0.0.1"
					Margin="0,0,0,10"/>
			<Button x:Name="btnConnect"
					Content="Connect"
					Click="BtnConnect_Click"
					Background="#007C80"
					Margin="0,0,0,10"/>
			<Button Content="Execute All"
					Click="BtnExecuteAll_Click"
					Background="#4CAF50"
					Margin="0,0,0,20"
					FontWeight="Bold"/>
			<Button Content="Quit"
					Click="BtnQuit_Click"
					Background="#A52A2A"/>
		</StackPanel>

		<StackPanel Grid.Column="1"
				Margin="20,0,0,0">
			<TextBlock Text="Server Backups:"
					FontSize="14"
					Margin="0,0,0,5"/>
			<ListBox x:Name="lstBackups"
					 ItemTemplate="{StaticResource BackupTemplate}"
					 ItemsSource="{Binding}"
					 Background="White"
					 BorderThickness="0"
					 Foreground="Black"
					 SelectionMode="Single"
					 HorizontalContentAlignment="Stretch"
					 Height="400"/>
		</StackPanel>
	</Grid>
</Window>
