<Window x:Class="EasySaveClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console de sauvegarde distante" Height="450" Width="800">
    <Grid Margin="10">
        <ListView Name="BackupJobList" Margin="0,0,0,50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom de la tâche" DisplayMemberBinding="{Binding JobName}" Width="200" />
                    <GridViewColumn Header="État" DisplayMemberBinding="{Binding Status}" Width="100" />
                    <GridViewColumn Header="Progression (%)" DisplayMemberBinding="{Binding Progress}" Width="120" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="Pause" Width="100" Margin="10,0" Click="Pause_Click" />
            <Button Content="Play" Width="100" Margin="10,0" Click="Play_Click" />
            <Button Content="Stop" Width="100" Margin="10,0" Click="Stop_Click" />
        </StackPanel>
    </Grid>
</Window>
