<Window x:Class="EasySaveClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console de sauvegarde distante" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Jobs}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Progression" Binding="{Binding Progress}" Width="120"/>
                <DataGridTextColumn Header="État" Binding="{Binding State}" Width="100"/>
                <DataGridTemplateColumn Header="Actions" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5,0" HorizontalAlignment="Center">
                                <Button Content="▶️" Width="30" Click="Play_Click" Margin="2,0"/>
                                <Button Content="⏸️" Width="30" Click="Pause_Click" Margin="2,0"/>
                                <Button Content="⏹️" Width="30" Click="Stop_Click" Margin="2,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
