<Window x:Class="EasySaveClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" Height="450" Width="800">

    <Grid>
        <DataGrid ItemsSource="{Binding Jobs}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Source" Binding="{Binding SourceDirectory}" Width="*"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding TargetDirectory}" Width="*"/>
                <DataGridTextColumn Header="Progression" Binding="{Binding Progress}" Width="100"/>
                <DataGridTemplateColumn Header="Actions" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="▶" Click="Play_Click"
                                        IsEnabled="{Binding State, Converter={StaticResource PlayEnabledConverter}}"/>
                                <Button Content="⏸" Click="Pause_Click"
                                        IsEnabled="{Binding State, Converter={StaticResource PauseEnabledConverter}}"/>
                                <Button Content="■" Click="Stop_Click"
                                        IsEnabled="{Binding State, Converter={StaticResource StopEnabledConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
