<Window x:Class="Easy_Save.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Easy_Save.View"
        mc:Ignorable="d"
        Title="EasySave"
        Height="720"
        Width="1280"
        Background="#002222"
        WindowStartupLocation="CenterScreen"
        x:Name="mainWindow">

        <Window.Resources>
                <Style x:Key="MenuButtonStyle"
                       TargetType="Button">
                        <Setter Property="Width"
                                Value="180"/>
                        <Setter Property="Height"
                                Value="50"/>
                        <Setter Property="Margin"
                                Value="0,10,0,0"/>
                        <Setter Property="Background"
                                Value="#007C80"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="FontWeight"
                                Value="Bold"/>
                        <Setter Property="FontSize"
                                Value="16"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                </Style>

                <Style x:Key="SettingsButtonStyle"
                       TargetType="Button">
                        <Setter Property="Width"
                                Value="40"/>
                        <Setter Property="Height"
                                Value="40"/>
                        <Setter Property="Background"
                                Value="#007C80"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="FontWeight"
                                Value="Bold"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="20">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="LanguageButtonStyle"
                       TargetType="Button">
                        <Setter Property="Width"
                                Value="120"/>
                        <Setter Property="Height"
                                Value="35"/>
                        <Setter Property="Margin"
                                Value="0,5,0,5"/>
                        <Setter Property="Background"
                                Value="#007C80"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="FontWeight"
                                Value="Bold"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                </Style>

                <Style x:Key="BackupItemStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="#007C80"/>
                        <Setter Property="CornerRadius"
                                Value="5"/>
                        <Setter Property="Margin"
                                Value="0,5,0,5"/>
                        <Setter Property="Padding"
                                Value="10"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                        <Setter Property="Background"
                                                Value="#008C90"/>
                                        <Setter Property="BorderBrush"
                                                Value="#AAE0E0"/>
                                        <Setter Property="BorderThickness"
                                                Value="1"/>
                                </Trigger>
                        </Style.Triggers>
                </Style>

                <Style x:Key="BusinessSoftwareItemStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="#007C80"/>
                        <Setter Property="CornerRadius"
                                Value="5"/>
                        <Setter Property="Margin"
                                Value="0,2,0,2"/>
                        <Setter Property="Padding"
                                Value="5"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                </Style>
        </Window.Resources>

        <Grid>
                <!-- Contenu principal -->
                <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"
                                                  MinWidth="200"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Bouton Paramètres en haut à gauche -->
                        <Button x:Name="btnSettings"
                                Content="⚙"
                                Style="{StaticResource SettingsButtonStyle}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="0,0,0,20"
                                Click="BtnSettings_Click"
                                FontSize="20"/>

                        <!-- Menu latéral avec les boutons -->
                        <StackPanel Grid.Column="0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="EasySave"
                                           FontSize="36"
                                           FontFamily="Consolas"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,30"/>
                                <Button x:Name="btnCreate"
                                        Content="Create"
                                        Style="{StaticResource MenuButtonStyle}"
                                        Click="BtnCreate_Click"/>
                                <Button x:Name="btnExecute"
                                        Content="Execute"
                                        Style="{StaticResource MenuButtonStyle}"
                                        Click="BtnExecute_Click"
                                        IsEnabled="False"/>
                                <Button x:Name="btnExecuteAll"
                                        Content="Execute All"
                                        Style="{StaticResource MenuButtonStyle}"
                                        Click="BtnExecuteAll_Click"/>
                                <Button x:Name="btnDelete"
                                        Content="Delete"
                                        Style="{StaticResource MenuButtonStyle}"
                                        Click="BtnDelete_Click"
                                        IsEnabled="False"/>
                                <Grid Margin="0,10,0,0">
                                    <Button x:Name="btnToggleServer"
                                            Content="Start Server"
                                            Style="{StaticResource MenuButtonStyle}"
                                            Click="BtnToggleServer_Click"/>
                                    <Ellipse x:Name="serverStatusIndicator" 
                                             Width="15" 
                                             Height="15" 
                                             Fill="Gray" 
                                             HorizontalAlignment="Right" 
                                             VerticalAlignment="Center" 
                                             Margin="0,0,10,0"/>
                                </Grid>
                                <Button x:Name="btnQuit"
                                        Content="Quit"
                                        Style="{StaticResource MenuButtonStyle}"
                                        Margin="0,60,0,0"
                                        Click="BtnQuit_Click"/>
                        </StackPanel>

                        <!-- Conteneur principal pour les différentes vues -->
                        <Grid Grid.Column="1">
                                <!-- Vue Liste (par défaut) -->
                                <Border x:Name="listView"
                                        Background="#EFFFFF"
                                        CornerRadius="20"
                                        Padding="20"
                                        Margin="40"
                                        Visibility="Visible">
                                        <Grid>
                                                <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock x:Name="txtListTitle"
                                                           Grid.Row="0"
                                                           Text="Liste des sauvegardes"
                                                           FontSize="24"
                                                           FontWeight="Bold"
                                                           Margin="0,0,0,20"/>

                                                <ScrollViewer Grid.Row="1"
                                                              VerticalScrollBarVisibility="Auto"
                                                              HorizontalScrollBarVisibility="Auto">
                                                        <StackPanel x:Name="backupListPanel">
                                                                <!-- Liste de backups générée dynamiquement -->
                                                        </StackPanel>
                                                </ScrollViewer>
                                        </Grid>
                                </Border>

                                <!-- Vue Création (masquée par défaut) -->
                                <Border x:Name="createView"
                                        Background="#EFFFFF"
                                        CornerRadius="20"
                                        Padding="40"
                                        Margin="40"
                                        Visibility="Collapsed">
                                        <Grid>
                                                <Button x:Name="btnBack"
                                                        Content="←"
                                                        Width="40"
                                                        Height="40"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Background="#007C80"
                                                        Foreground="White"
                                                        FontWeight="Bold"
                                                        Click="BtnBack_Click"
                                                        Margin="0,0,0,20"/>

                                                <StackPanel Margin="0,50,0,0">
                                                        <TextBlock x:Name="txtBackupName"
                                                                   Text="Nom de la sauvegarde"
                                                                   FontSize="16"/>
                                                        <TextBox x:Name="txtJobName"
                                                                 Margin="0,5,0,20"
                                                                 Height="30"/>

                                                        <TextBlock x:Name="txtSourcePathLabel"
                                                                   Text="Chemin du dossier source"
                                                                   FontSize="16"/>
                                                        <DockPanel Margin="0,5,0,20"
                                                                   LastChildFill="True">
                                                                <Button Content="..."
                                                                        Width="30"
                                                                        Height="30"
                                                                        Margin="10,0,0,0"
                                                                        Click="BrowseFolder_Click"
                                                                        DockPanel.Dock="Right"
                                                                        Background="#007C80"
                                                                        Foreground="White"
                                                                        FontWeight="Bold"/>
                                                                <TextBox x:Name="txtSourcePath"
                                                                         Height="30"/>
                                                        </DockPanel>

                                                        <TextBlock x:Name="txtDestinationPathLabel"
                                                                   Text="Chemin du dossier de destination"
                                                                   FontSize="16"/>
                                                        <DockPanel Margin="0,5,0,20"
                                                                   LastChildFill="True">
                                                                <Button Content="..."
                                                                        Width="30"
                                                                        Height="30"
                                                                        Margin="10,0,0,0"
                                                                        Click="BrowseFolder_Click"
                                                                        DockPanel.Dock="Right"
                                                                        Background="#007C80"
                                                                        Foreground="White"
                                                                        FontWeight="Bold"/>
                                                                <TextBox x:Name="txtDestinationPath"
                                                                         Height="30"/>
                                                        </DockPanel>

                                                        <TextBlock x:Name="txtType"
                                                                   Text="Type"
                                                                   FontSize="16"
                                                                   Margin="0,10,0,5"/>
                                                        <StackPanel x:Name="BackupTypeRadioButtons"
                                                                    Orientation="Horizontal"
                                                                    Margin="0,0,0,20">
                                                                <RadioButton x:Name="rbFull"
                                                                             Content="FULL"
                                                                             GroupName="BackupType"
                                                                             IsChecked="True"
                                                                             Margin="0,0,40,0"/>
                                                                <RadioButton x:Name="rbDifferential"
                                                                             Content="DIFFERENTIAL"
                                                                             GroupName="BackupType"/>
                                                        </StackPanel>

                                                        <Button x:Name="btnFormCreate"
                                                                Content="Create"
                                                                Width="150"
                                                                Height="40"
                                                                Background="#007C80"
                                                                Foreground="White"
                                                                FontWeight="Bold"
                                                                FontSize="16"
                                                                HorizontalAlignment="Center"
                                                                Margin="0,30,0,0"
                                                                Click="BtnFormCreate_Click"/>
                                                </StackPanel>
                                        </Grid>
                                </Border>
                        </Grid>
                </Grid>

                <!-- Menu de sélection de langue (en overlay) -->
                <Grid x:Name="languageMenuOverlay"
                      Visibility="Collapsed"
                      Background="#33000000"
                      Panel.ZIndex="100"
                      MouseDown="LanguageMenuOverlay_MouseDown">
                        <Border x:Name="languageMenu"
                                Background="#004446"
                                CornerRadius="10"
                                Padding="10"
                                Width="280"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="70,20,0,0"
                                MouseDown="LanguageMenu_MouseDown">
                                <StackPanel>
                                        <TextBlock x:Name="txtLanguage"
                                                   Text="Language"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="0,0,0,10"
                                                   HorizontalAlignment="Center"/>
                                        <Button x:Name="btnFrench"
                                                Content="Français"
                                                Style="{StaticResource LanguageButtonStyle}"
                                                Click="BtnFrench_Click"/>
                                        <Button x:Name="btnEnglish"
                                                Content="English"
                                                Style="{StaticResource LanguageButtonStyle}"
                                                Click="BtnEnglish_Click"/>
                                        <Separator Margin="0,10,0,10"
                                                   Background="#336666"/>
                                        <TextBlock x:Name="txtPriorityExtensions"
                                                   Text="Priority Extensions"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="0,0,0,10"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Priority File Extensions"
                                                   Foreground="White"
                                                   Margin="10,5,0,5"/>
                                        <DockPanel Margin="10,0,10,5">
                                                <TextBox x:Name="txtPriorityExtension"
                                                         Width="180"
                                                         Height="25"
                                                         VerticalContentAlignment="Center"
                                                         KeyDown="TxtPriorityExtension_KeyDown"/>
                                                <Button x:Name="btnAddPriorityExtension"
                                                        Content="+"
                                                        Width="40"
                                                        Height="25"
                                                        Margin="5,0,0,0"
                                                        Background="#007C80"
                                                        Foreground="White"
                                                        Click="BtnAddPriorityExtension_Click"/>
                                        </DockPanel>
                                        <TextBlock Foreground="#AAFFFFFF"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0,10,5">
                        Enter an extension (e.g. .pdf, .doc) that will be processed with priority during backups.
                                        </TextBlock>

                                        <!-- Liste des extensions prioritaires -->
                                        <Border Background="#336666"
                                                CornerRadius="5"
                                                Margin="10,5,10,10"
                                                MaxHeight="150">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel x:Name="priorityExtensionsListPanel"
                                                                    Margin="5">
                                                                <!-- Liste générée dynamiquement -->
                                                        </StackPanel>
                                                </ScrollViewer>
                                        </Border>

                                        <Separator Margin="0,10,0,10"
                                                   Background="#336666"/>
                                        <TextBlock x:Name="txtBusinessSettings"
                                                   Text="Business Settings"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="0,0,0,10"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Business Software"
                                                   Foreground="White"
                                                   Margin="10,5,0,5"/>
                                        <DockPanel Margin="10,0,10,5">
                                                <TextBox x:Name="txtBusinessSoftware"
                                                         Width="180"
                                                         Height="25"
                                                         VerticalContentAlignment="Center"/>
                                                <Button x:Name="btnAddBusinessSoftware"
                                                        Content="+"
                                                        Width="40"
                                                        Height="25"
                                                        Margin="5,0,0,0"
                                                        Background="#007C80"
                                                        Foreground="White"
                                                        Click="BtnAddBusinessSoftware_Click"/>
                                        </DockPanel>
                                        <TextBlock Foreground="#AAFFFFFF"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0,10,5">
                        Enter the process name (e.g. calc) that will block backup execution.
                                        </TextBlock>

                                        <!-- Liste des logiciels métier -->
                                        <Border Background="#336666"
                                                CornerRadius="5"
                                                Margin="10,5,10,10"
                                                MaxHeight="150">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel x:Name="businessSoftwareListPanel"
                                                                    Margin="5">
                                                                <!-- Liste générée dynamiquement -->
                                                        </StackPanel>
                                                </ScrollViewer>
                                        </Border>

                                        <Separator Margin="0,10,0,10"
                                                   Background="#336666"/>
                                        <TextBlock x:Name="txtBandwidthSettings"
                                                   Text="Bandwidth Settings"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="0,0,0,10"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtBandwidthThreshold"
                                                   Text="Limitation Threshold (KB)"
                                                   Foreground="White"
                                                   Margin="10,5,0,5"/>
                                        <DockPanel Margin="10,0,10,5">
                                                <TextBox x:Name="txtBandwidthThresholdValue"
                                                         Width="180"
                                                         Height="25"
                                                         VerticalContentAlignment="Center"
                                                         KeyDown="TxtBandwidthThreshold_KeyDown"/>
                                                <Button x:Name="btnUpdateBandwidthThreshold"
                                                        Content="+"
                                                        Width="40"
                                                        Height="25"
                                                        Margin="5,0,0,0"
                                                        Background="#007C80"
                                                        Foreground="White"
                                                        Click="BtnUpdateBandwidthThreshold_Click"/>
                                        </DockPanel>
                                        <TextBlock x:Name="txtBandwidthHint"
                                                   Foreground="#AAFFFFFF"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0,10,5">
                        Threshold in KB for large files requiring bandwidth limitation (default: 1024 KB)
                                        </TextBlock>
                                </StackPanel>
                        </Border>
                </Grid>
        </Grid>
</Window>